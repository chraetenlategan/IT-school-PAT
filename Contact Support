begin
//go back to the home page
form1.show;
//hides my current form
form2.Hide;
end;

procedure TForm2.img_exitClick(Sender: TObject);
begin
//ask to rate the program
//there is no username yet so username = '#'
TRating.RateAndExit('#');
end;

end.

